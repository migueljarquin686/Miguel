	Escribir "Ingrese el primer numero"
	Leer numx
	
	Escribir "Ingrese elseguundo numero"
	Leer numy
	
	Escribir "Ingrese el tercer numero"
	Leer numz
	
	si (numx+numy=numz) Entonces
		Escribir "Son iguales"
		
	SiNo
		Escribir "Son distintos"
	FinSi
	Escribir "Es un placer servirle"
